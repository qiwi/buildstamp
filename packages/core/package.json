{
  "name": "buildstamp",
  "version": "2.0.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Buildstamp",
  "source": "src/main/ts/index.ts",
  "main": "target/es6/index.js",
  "bin": "./target/es6/cli.js",
  "exports": {
    ".": {
      "import": "./target/es6/index.js"
    },
    "./cli": {
      "import": "./target/es6/cli.js"
    },
    "./": "./"
  },
  "types": "typings/index.d.ts",
  "typescript": {
    "definition": "typings/index.d.ts"
  },
  "type": "module",
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "yarn lint && yarn test:unit",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest -w 1 --config=jest.config.json",
    "test:depcheck": "npm_config_yes=true npx -p depcheck -p @babel/parser@7.16.4 depcheck --ignores typedoc,tslib,eslint-config-*",
    "clean": "rimraf target typings flow-typed buildcache",
    "build": "yarn build:es6 && yarn build:ts && yarn build:libdef && yarn docs && yarn build:esmfix",
    "build:es6": "mkdirp target/es6 && tsc -p tsconfig.es6.json",
    "build:ts": "mkdirp target/ts && cp -r src/main/ts/ target/ts/",
    "build:local": "yarn build:es5 && chmod +x target/es5/cli.js",
    "build:libdef": "libdefkit --tsconfig=tsconfig.es6.json",
    "build:esmfix": "npm_config_yes=true npx tsc-esm-fix --target=target/es6 --dirnameVar=false",
    "docs": "typedoc --tsconfig tsconfig.json",
    "uglify": "for f in $(find target -name '*.js'); do short=${f%.js}; terser -c -m -o $short.js -- $f; done",
    "postupdate": "yarn && npx yarn-audit-fix && yarn build && yarn test",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qiwi/buildstamp.git"
  },
  "keywords": [
    "build-info",
    "buildstamp"
  ],
  "files": [
    "README.md",
    "CHANGELOG.md",
    "target",
    "typings",
    "flow-typed"
  ],
  "author": "Anton Golub <a.golub@qiwi.com>",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.0.0",
    "@qiwi/libdefkit": "^5.0.0",
    "@qiwi/license": "^1.4.4",
    "@types/jest": "^29.0.0",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^18.7.18",
    "@types/rimraf": "^3.0.2",
    "mkdirp": "^2.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^4.0.0",
    "terser": "^5.15.0",
    "ts-jest": "^29.0.0",
    "typedoc": "^0.24.0",
    "typescript": "4.9.4"
  },
  "dependencies": {
    "find-git-root": "^1.0.4",
    "meow": "^11.0.0",
    "tslib": "^2.4.0"
  },
  "engines": {
    "node": ">=16"
  },
  "pkg": {
    "scripts": "../core/target/es5/**/*.js"
  }
}
