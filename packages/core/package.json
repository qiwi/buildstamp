{
  "name": "buildstamp",
  "version": "1.4.3",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "description": "Buildstamp",
  "source": "src/main/ts/index.ts",
  "main": "target/es5/index.js",
  "types": "typings/index.d.ts",
  "typescript": {
    "definition": "typings/index.d.ts"
  },
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "jest": "NODE_OPTIONS='--experimental-vm-modules' jest -w 1 --config=jest.config.json",
    "test": "yarn lint && yarn jest",
    "clean": "rimraf target typings flow-typed buildcache",
    "build": "yarn clean && yarn build:es6 && yarn build:ts && yarn build:libdef && yarn docs",
    "build:es6": "mkdirp target/es6 && tsc -p tsconfig.es6.json",
    "build:ts": "mkdirp target/ts && cp -r src/main/ts/ target/ts/",
    "build:local": "yarn build:es5 && chmod +x target/es5/cli.js",
    "build:libdef": "libdefkit --target=target/es6",
    "test:report": "yarn test && yarn push:report",
    "push:report": "yarn coveralls:push",
    "coveralls:push": "cat ./coverage/lcov.info | coveralls || exit 0",
    "docs": "typedoc --tsconfig tsconfig.json",
    "uglify": "for f in $(find target -name '*.js'); do short=${f%.js}; terser -c -m -o $short.js -- $f; done",
    "postupdate": "yarn && npx yarn-audit-fix && yarn build && yarn test",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qiwi/buildstamp.git"
  },
  "keywords": [
    "build-info",
    "buildstamp"
  ],
  "files": [
    "README.md",
    "CHANGELOG.md",
    "target",
    "typings",
    "flow-typed"
  ],
  "author": "Anton Golub <a.golub@qiwi.com>",
  "license": "MIT",
  "devDependencies": {
    "@qiwi/libdefkit": "^3.1.3",
    "@qiwi/license": "^1.3.3",
    "@swissquote/crafty-preset-jest": "^1.17.2",
    "@types/jest": "^27.4.0",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^17.0.13",
    "@types/rimraf": "^3.0.2",
    "coveralls": "^3.1.1",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "terser": "^5.10.0",
    "ts-jest": "^27.1.3",
    "typedoc": "^0.22.11",
    "typescript": "4.5.5"
  },
  "dependencies": {
    "find-git-root": "^1.0.4",
    "meow": "^10.1.2",
    "tslib": "^2.3.1"
  },
  "bin": {
    "buildstamp": "target/es6/cli.js"
  },
  "engines": {
    "node": ">=12.18.0"
  },
  "pkg": {
    "scripts": "../core/target/es5/**/*.js"
  }
}
