{
  "name": "buildstamp",
  "version": "2.0.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Buildstamp JS/TS API",
  "type": "module",
  "main": "target/es6/index.js",
  "bin": "./target/es6/cli.js",
  "exports": {
    ".": {
      "import": "./target/es6/index.js"
    },
    "./cli": {
      "import": "./target/es6/cli.js"
    },
    "./*": "./*"
  },
  "types": "typings/index.d.ts",
  "typescript": {
    "definition": "typings/index.d.ts"
  },
  "scripts": {
    "build:esm": "node ../infra/scripts/build.mjs --entry='./src/main/ts/index.ts:./src/main/ts/cli.ts'",
    "build:dts": "tsc --emitDeclarationOnly --skipLibCheck --outDir target/dts",
    "build:docs": "typedoc --options src/main/typedoc",
    "test": "concurrently --kill-others-on-fail 'npm:test:*'",
    "test:unit": "abstractest --runner=native src/test/ts/**/*.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qiwi/buildstamp.git"
  },
  "keywords": [
    "build-info",
    "buildstamp"
  ],
  "files": [
    "README.md",
    "CHANGELOG.md",
    "target",
    "typings",
    "flow-typed"
  ],
  "author": "Anton Golub <a.golub@qiwi.com>",
  "license": "MIT",
  "dependencies": {
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "@abstractest/core": "^0.2.0",
    "@qiwi/buildstamp-infra": "workspace:*"
  },
  "engines": {
    "node": ">=16"
  },
  "pkg": {
    "scripts": "../core/target/es5/**/*.js"
  }
}
