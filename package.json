{
  "name": "buildstamp-monorepo",
  "version": "0.0.0",
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "description": "Buildstamp monorepo",
  "scripts": {
    "clean": "lerna run clean",
    "build": "yarn clean && lerna run build --stream --concurrency 2",
    "bootstrap": "lerna bootstrap",
    "test": "yarn lint && yarn test:unit",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:report": "yarn test && yarn coveralls:push",
    "test:concurrent": "lerna run test --concurrency 1 --stream --no-prefix && yarn coverage:merge",
    "coverage:merge": "node scripts/js/coverage-merge.js",
    "coveralls:push": "cat ./coverage/lcov.info | npx_config_yes=true npx coveralls@3 || echo 'coveralls push failed :(' && exit 0",
    "docs": "typedoc packages/**/src/main --ignoreCompilerErrors || exit 0",
    "postupdate": "yarn && yarn bootstrap && npx yarn-audit-fix && yarn build && yarn test",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "format": "lerna run format"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qiwi/buildstamp.git"
  },
  "keywords": [
    "build-info",
    "buildstamp"
  ],
  "license": "MIT",
  "devDependencies": {
    "@qiwi/license": "^1.4.4",
    "coveralls": "^3.1.1",
    "eslint": "^8.23.1",
    "eslint-config-qiwi": "^1.17.6",
    "jest": "^27.4.7",
    "lerna": "^5.5.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "4.7.4"
  },
  "dependencies": {},
  "engines": {
    "node": ">=14.8"
  }
}
