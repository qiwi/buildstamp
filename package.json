{
  "name": "buildstamp-monorepo",
  "version": "0.0.0",
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "description": "Buildstamp monorepo",
  "scripts": {
    "clean": "yarn workspaces foreach --parallel --topological-dev --no-private run clean",
    "build": "yarn clean && yarn workspaces foreach -pt run build --stream --concurrency 2",
    "test": "yarn lint && yarn test:unit",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:report": "yarn test && yarn coveralls:push",
    "test:concurrent": "yarn workspaces foreach --parallel --topological-dev --no-private run test --concurrency 1 --stream --no-prefix && yarn coverage:merge",
    "coverage:merge": "node scripts/js/coverage-merge.js",
    "coveralls:push": "cat ./coverage/lcov.info | npx_config_yes=true npx coveralls@3 || echo 'coveralls push failed :(' && exit 0",
    "docs": "typedoc packages/**/src/main --ignoreCompilerErrors || exit 0",
    "postupdate": "yarn && npx yarn-audit-fix && yarn build && yarn test",
    "lint": "yarn workspaces foreach -p --topological-dev --no-private run lint",
    "lint:fix": "yarn workspaces foreach --p --topological-dev --no-private run lint:fix",
    "format": "yarn workspaces foreach --p --topological-dev --no-private run format"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qiwi/buildstamp.git"
  },
  "keywords": [
    "build-info",
    "buildstamp"
  ],
  "license": "MIT",
  "devDependencies": {
    "@qiwi/license": "^1.4.4",
    "coveralls": "^3.1.1",
    "eslint": "^8.23.1",
    "eslint-config-qiwi": "^1.17.6",
    "jest": "^29.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^4.0.0",
    "typescript": "4.9.4"
  },
  "engines": {
    "node": ">=14.8"
  },
  "packageManager": "yarn@4.0.0-rc.40"
}
